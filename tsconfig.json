{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "@assets/*": ["src/assets/*"],
      "@shared/*": ["src/shared/*"],
      "@components/*": ["src/renderer/components/*"],
      "@context/*": ["src/renderer/context/*"],
      "@renderer/*": ["src/renderer/*"],
      "*": ["node_modules/*"]
    },
    "jsx": "react"
  },
  "include": [
    "src/**/*"
  ]
}
